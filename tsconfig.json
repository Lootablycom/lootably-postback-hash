{
	"compilerOptions": {
		"moduleResolution": "node",
		"strict": true,
		"lib": [
			"es2018",
			"DOM"
		],
		"module": "commonjs",
		"target": "es6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./node_modules/@types/*"
		],
		"outDir": "dist",
		"types": [
			"@types/jest",
			"@types/node"
		]
	},
	"exclude": [
    "node_modules",
		"build"
	]
}